<div class = "page-header">
<h1> Movies </h1>
</div>

<p><a href="/movies/new" class="btn btn-primary">Create a New Movie</a></p>

<table class = "table table-hover">
 <tr>
  <th> Title </th>
  <th> Year </th>
  <th> Duration </th>
  <th> Description </th>
  <th> Image </th>
  <th></th>
  <th></th>
  <th></th>
</tr>

<tbody>
<% @m_list.each do |list|%>

<tr> 
<td><%=list.title%></td>
<td><%=list.year%></td>
<td><%=list.duration%></td>
<td><%=truncate(list.description)%></td>
<td><img src="<%=list.image_url%>" width = "80"></td>
<td><a href="/movies/<%=list.id%>">View Detail</a></td>
<td><a href="/movies/<%=list.id%>/edit">Update Movie</a></td>
<td><a href="/delete_movie/<%=list.id%>">Delete</a></td>
</tr>

<% end %>
</tbody>
</table>