<div class = "page-header">
<h1> Actors </h1>
</div>

<p><a href="/actors/new" class="btn btn-primary">Create a New Actor</a></p>

<table class = "table table-hover">
 <tr>
  <th> Name </th>
  <th> Bio </th>
  <th> Dob </th>
  <th> Image </th>
  <th></th>
  <th></th>
  <th></th>
</tr>

<tbody>
<% @a_list.each do |list|%>

<tr> 
<td><%=list.name%></td>
<td><%=truncate(list.bio)%></td>
<td><%=list.dob%></td>
<td><img src="<%=list.image_url%>" width = "80"></td>
<td><a href="/actors/<%=list.id%>">View Detail</a></td>
<td><a href="/actors/<%=list.id%>/edit">Update Actor</a></td>
<td><a href="/delete_actor/<%=list.id%>">Delete</a></td>
</tr>

<% end %>
</tbody>
</table>